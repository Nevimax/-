<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeAllYellow">
        <item name="color">@color/colorBar</item>
        <item name="android:colorBackground">@color/colorblack</item>
        <item name="android:textColorTertiary">@color/colorLayout</item>
        <item name="android:colorPrimary">@color/colortext</item>
    </style>
</resources>
